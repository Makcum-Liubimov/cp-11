<Window x:Class="cp_11.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Логін" Height="250" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <Label Content="Ім'я користувача"/>
            <TextBox Name="UsernameTextBox" Width="250" Margin="0,0,0,10"/>
            <Label Content="Пароль"/>
            <PasswordBox Name="PasswordBox" Width="250" Margin="0,0,0,10"/>
            <Label Content="Тип користувача"/>
            <ComboBox Name="UserTypeComboBox" Width="250" Margin="0,0,0,10">
                <ComboBoxItem Content="Пасажир"/>
                <ComboBoxItem Content="Машиніст"/>
            </ComboBox>
            <Button Content="Увійти" Width="100" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
