<Window x:Class="cp_11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Train Booking" Height="300" Width="800">
    <Grid Margin="10">
        <!-- Вибір міст -->
        <TextBlock Text="Звідки" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0"/>
        <ComboBox Name="FromCityComboBox" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,30,0,0" Width="300"/>
        <TextBlock Text="Куди" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="400,10,0,0"/>
        <ComboBox Name="ToCityComboBox" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="400,30,0,0" Width="300"/>

        <!-- Дата відправлення -->
        <ComboBox Name="DepartureDateComboBox" Width="150" Margin="28,77,602,35"/>

        <!-- Час відправлення -->
        <ComboBox Name="DepartureTimeComboBox" Margin="413,77,252,35"/>


        <!-- Кнопки для вибору дати -->
        
        <ListBox Name="TicketsListBox" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,250,0,0" Width="600" Height="150">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding FromCity}" Width="100"/>
                        <TextBlock Text="{Binding ToCity}" Width="100"/>
                        <TextBlock Text="{Binding DepartureDate}" Width="150"/>
                        <TextBlock Text="{Binding DepartureTime}" Width="100"/>
                        <TextBlock Text="{Binding TrainNumber}" Width="100"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>

