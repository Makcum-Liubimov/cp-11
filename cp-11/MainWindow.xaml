<Window x:Class="cp_11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Головна" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <Button Name="ShowScheduleButton" Content="Показати розклад" Click="ShowScheduleButton_Click" Width="150" Height="30" Margin="0,0,0,10"/>
            <ListBox Name="ScheduleListBox" Height="150" Margin="0,0,0,10"/>
            <Button Name="BuyTicketButton" Content="Придбати квиток" Click="BuyTicketButton_Click" Width="150" Height="30" Margin="0,0,0,10"/>
            <Button Name="MyTicketsButton" Content="Мої квитки" Click="MyTicketsButton_Click" Width="150" Height="30" Margin="0,0,0,10" Visibility="Hidden"/>
            <ListBox Name="TicketsListBox" Height="150"/>
        </StackPanel>
    </Grid>
</Window>
