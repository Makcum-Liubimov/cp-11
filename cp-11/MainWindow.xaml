<Window x:Class="cp_11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Train Booking" Height="300" Width="800">
    <Grid Margin="10">
        <!-- Вибір міст -->
        <TextBlock Text="Звідки" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0"/>
        <ComboBox Name="FromCityComboBox" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,30,0,0" Width="300"/>
        <TextBlock Text="Куди" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="400,10,0,0"/>
        <ComboBox Name="ToCityComboBox" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="400,30,0,0" Width="300"/>

        <!-- Дата відправлення -->
        <TextBlock Text="Дата відправлення" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,80,0,0"/>
        <DatePicker Name="DepartureDatePicker" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,100,0,0" Width="300" />

        <!-- Час відправлення -->
        <TextBlock Text="Час відправлення від" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="400,80,0,0"/>
        <ComboBox Name="TimePicker" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="400,100,0,0" Width="100">
            <ComboBoxItem Content="00:00"/>
            <ComboBoxItem Content="06:00"/>
            <ComboBoxItem Content="12:00"/>
            <ComboBoxItem Content="18:00"/>
        </ComboBox>

        <!-- Кнопки для вибору дати -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,150,0,0">
            <Button Content="Сьогодні" Width="75" Margin="5"/>
            <Button Content="Завтра" Width="75" Margin="5"/>
            <Button Content="Післязавтра" Width="75" Margin="5"/>
        </StackPanel>
        <ListBox Name="TicketsListBox" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,250,0,0" Width="600" Height="150">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding FromCity}" Width="100"/>
                        <TextBlock Text="{Binding ToCity}" Width="100"/>
                        <TextBlock Text="{Binding DepartureDate}" Width="150"/>
                        <TextBlock Text="{Binding DepartureTime}" Width="100"/>
                        <TextBlock Text="{Binding TrainNumber}" Width="100"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>

